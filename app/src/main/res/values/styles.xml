<resources>


    <!-- Base application theme. -->
    <style name="DefaultLightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorTertiary">@color/textSecondaryColorBlack</item>
        <item name="android:windowBackground">@color/backgroundColorWhite</item>
        <item name="android:windowAnimationStyle">@style/ActivitySlideAnimStyle</item>

    </style>


    <style name="DefaultDarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColorDark</item>
        <item name="android:windowAnimationStyle">@style/ActivitySlideAnimStyle</item>
    </style>



    <style name="NoBackgroundLightTheme" parent="DefaultLightTheme">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="NoBackgroundDarkTheme" parent="DefaultDarkTheme">
        <item name="android:windowBackground">@null</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="ToolbarTitleTheme.Light" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToolbarPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="overlapAnchor">false</item>
    </style>


    <style name="PopupMenuAnimation_Left_Top" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/menu_scale_in_from_left_top</item>
    </style>

    <style name="PopupMenuAnimation_Right_Top" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/menu_scale_in_from_right_top</item>
    </style>

    <style name="PopupMenuAnimation_Left_Bottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/menu_scale_in_from_left_bottom</item>
    </style>

    <style name="PopupMenuAnimation_Right_Bottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/menu_scale_in_from_right_bottom</item>
    </style>

    <style name="ActivitySlideAnimStyle" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:activityOpenEnterAnimation">@anim/activity_slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_slide_out_right</item>
    </style>

</resources>
