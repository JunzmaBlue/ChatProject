<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="20dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/LoginFragment_mTvLogoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/LoginActivity_Layout_Login"
            android:textColor="@color/textPrimaryColorBlack"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginStart="64dp"
            android:background="@drawable/bg_accent"
            app:layout_constraintBottom_toBottomOf="@id/LoginFragment_mTvLogoText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/LoginFragment_mTvLogoText"
            app:layout_constraintTop_toTopOf="@id/LoginFragment_mTvLogoText" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/LoginFragment_mTilTelephone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/LoginActivity_Layout_Username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/LoginFragment_mTvLogoText">

            <EditText
                android:id="@+id/LoginFragment_mEtTelephone"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="24dp"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:paddingTop="2dp"
                android:text="13631232530"
                android:textSize="13sp" />

        </android.support.design.widget.TextInputLayout>


        <View
            android:id="@+id/LoginFragment_mTelephoneUnderline"
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/selector_bg_underline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/LoginFragment_mTilTelephone" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/LoginFragment_mTilPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/LoginActivity_Layout_InputPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/LoginFragment_mTilTelephone">

            <EditText
                android:id="@+id/LoginFragment_mEtPassword"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:inputType="textPassword"
                android:paddingEnd="48dp"
                android:paddingStart="4dp"
                android:paddingTop="2dp"
                android:text="12345678"
                android:textSize="13sp" />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/LoginFragment_mBtnForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginEnd="4dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:minWidth="0dp"
            android:text="@string/LoginActivity_Layout_Forgot"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/LoginFragment_mTilPassword"
            app:layout_constraintEnd_toEndOf="@id/LoginFragment_mTilPassword" />


        <View
            android:id="@+id/LoginFragment_mPasswordUnderline"
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/selector_bg_underline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/LoginFragment_mTilPassword" />

        <TextView
            android:id="@+id/LoginFragment_mTvErrorHint"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:textColor="@android:color/holo_red_light"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/LoginFragment_mTilPassword"
            app:layout_constraintTop_toBottomOf="@id/LoginFragment_mTilPassword" />

        <ProgressBar
            android:id="@+id/LoginFragment_mPbLoginProgress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/LoginFragment_mBtnLogin"
            app:layout_constraintEnd_toEndOf="@id/LoginFragment_mBtnLogin"
            app:layout_constraintStart_toStartOf="@id/LoginFragment_mBtnLogin"
            app:layout_constraintTop_toTopOf="@id/LoginFragment_mBtnLogin" />


        <Button
            android:id="@+id/LoginFragment_mBtnLogin"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/radius_btn_4dp"
            android:text="@string/LoginActivity_Layout_Login"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/LoginFragment_mTvErrorHint" />

        <TextView
            android:id="@+id/LoginFragment_mTvRegisterHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="16dp"
            android:text="@string/LoginActivity_Layout_NonUsernameHint"
            android:textColor="@color/selector_text_enable_change"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/LoginFragment_mTvJumpToRegister"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/LoginFragment_mBtnLogin" />

        <TextView
            android:id="@+id/LoginFragment_mTvJumpToRegister"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/LoginActivity_Layout_Register"
            android:textColor="@color/selector_text_enable_change"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/LoginFragment_mTvRegisterHint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/LoginFragment_mTvRegisterHint"
            app:layout_constraintTop_toTopOf="@id/LoginFragment_mTvRegisterHint" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
