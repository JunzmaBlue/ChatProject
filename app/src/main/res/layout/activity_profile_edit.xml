<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.view.activity.EditProfileActivity">

    <android.support.constraint.Guideline
        android:id="@+id/EditProfileActivity_mGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/EditProfileActivity_mIvAvatarBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:foreground="#385c95fe"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/EditProfileActivity_mGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/EditProfileActivity_mIvAvatar"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:elevation="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/temp_head_image"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toTopOf="@id/EditProfileActivity_mGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.yzx.chat.widget.view.RoundImageView
        android:id="@+id/EditProfileActivity_mIvChangeAvatar"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"
        android:background="@color/colorAccent"
        android:elevation="4dp"
        android:padding="8dp"
        android:src="@drawable/ic_camera"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/EditProfileActivity_mIvAvatar"
        app:layout_constraintEnd_toEndOf="@id/EditProfileActivity_mIvAvatar" />


    <FrameLayout
        android:id="@+id/EditProfileActivity_mFlToolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/Default_mToolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="top"
            app:theme="@style/ToolbarTheme"
            app:title="@string/EditProfileActivity_Title"
            app:titleTextAppearance="@style/ToolbarTitleTheme.Light" />

    </FrameLayout>

    <EditText
        android:id="@+id/EditProfileActivity_mTvNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="我是一个小小羊"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@id/EditProfileActivity_mGuideline"
        app:layout_constraintEnd_toStartOf="@id/EditProfileActivity_mIvEditNickname"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/EditProfileActivity_mIvAvatar" />

    <ImageView
        android:id="@+id/EditProfileActivity_mIvEditNickname"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="2dp"
        android:padding="4dp"
        android:src="@drawable/ic_edit2"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/EditProfileActivity_mTvNickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/EditProfileActivity_mTvNickname"
        app:layout_constraintTop_toTopOf="@id/EditProfileActivity_mTvNickname" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/EditProfileActivity_mGuideline">


        <LinearLayout
            android:id="@+id/EditProfileActivity_mLlNickname"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/EditProfileActivity_NicknameLabel"
                android:textColor="@color/textPrimaryColorBlack"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/EditProfileActivity_mEtNickname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:imeOptions="actionDone"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/textSecondaryColorBlack"
                android:textSize="14sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/dividerColorBlack" />

        <LinearLayout
            android:id="@+id/EditProfileActivity_mLlSexSelected"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/EditProfileActivity_SexLabel"
                android:textColor="@color/textPrimaryColorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/EditProfileActivity_mTvSexSelected"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:textSize="14sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/dividerColorBlack" />

        <LinearLayout
            android:id="@+id/EditProfileActivity_mLlBirthday"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/EditProfileActivity_BirthdayLabel"
                android:textColor="@color/textPrimaryColorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/EditProfileActivity_mTvBirthday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:textSize="14sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/dividerColorBlack" />

        <LinearLayout
            android:id="@+id/EditProfileActivity_mLlLocation"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/EditProfileActivity_LocationLabel"
                android:textColor="@color/textPrimaryColorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/EditProfileActivity_mTvLocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:text="@string/EditProfileActivity_NoSet"
                android:textSize="14sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/dividerColorBlack" />

        <LinearLayout
            android:id="@+id/EditProfileActivity_mLlSignature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:minHeight="32dp"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="@string/EditProfileActivity_SignatureLabel"
                android:textColor="@color/textPrimaryColorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/EditProfileActivity_mTvSignature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical|end"
                android:text="@string/EditProfileActivity_NoSet"
                android:textSize="14sp" />


        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>