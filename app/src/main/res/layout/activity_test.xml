<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.view.activity.TestActivity">

    <EditText
        android:id="@+id/StrangerProfileActivity_mEtReason"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/bg_edit_dashed_round"
        android:gravity="start|top"
        android:hint="@string/StrangerProfileActivity_VerifyContentHint"
        android:paddingBottom="8dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/StrangerProfileActivity_mDivider_1"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/dividerColorBlack"
        app:layout_constraintBottom_toTopOf="@id/StrangerProfileActivity_mEtReason"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/StrangerProfileActivity_mDivider_2"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/dividerColorBlack"
        app:layout_constraintBottom_toTopOf="@id/StrangerProfileActivity_mDivider_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/StrangerProfileActivity_mIvSexIcon"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_sex_man"
        app:layout_constraintBottom_toTopOf="@id/StrangerProfileActivity_mDivider_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/StrangerProfileActivity_mDivider_2" />

    <TextView
        android:id="@+id/StrangerProfileActivity_mTvSexText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="男生 · 23岁 · 已婚"
        android:textColor="@color/textPrimaryColorBlack"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/StrangerProfileActivity_mDivider_1"
        app:layout_constraintStart_toEndOf="@id/StrangerProfileActivity_mIvSexIcon"
        app:layout_constraintTop_toBottomOf="@id/StrangerProfileActivity_mDivider_2" />

    <CheckBox
        android:id="@+id/StrangerProfileActivity_mCbAllowViewMoment"
        android:layout_width="28dp"
        android:layout_height="24dp"
        android:checked="true"
        android:scaleX="0.85"
        android:scaleY="0.85"
        app:layout_constraintBottom_toTopOf="@id/StrangerProfileActivity_mDivider_1"
        app:layout_constraintEnd_toStartOf="@id/StrangerProfileActivity_mTvAllowViewMomentHint"
        app:layout_constraintTop_toBottomOf="@id/StrangerProfileActivity_mDivider_2" />

    <TextView
        android:id="@+id/StrangerProfileActivity_mTvAllowViewMomentHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:includeFontPadding="false"
        android:text="允许查看我的动态"
        android:textColor="@color/textPrimaryColorBlack"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/StrangerProfileActivity_mDivider_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/StrangerProfileActivity_mDivider_2" />

    <Button
        android:id="@+id/StrangerProfileActivity_mBtnConfirm"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/radius_btn_20dp"
        android:text="请求添加好友"
        android:textColor="@android:color/white"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@id/StrangerProfileActivity_mDivider_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <View
        android:id="@+id/StrangerProfileActivity_mDivider_3"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/dividerColorBlack"
        app:layout_constraintBottom_toTopOf="@id/StrangerProfileActivity_mBtnConfirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/StrangerProfileActivity_mTvSignature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:maxLines="2"
        android:text="每个不曾起舞的日子，都是对生命的辜负！"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/StrangerProfileActivity_mDivider_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/StrangerProfileActivity_mTvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="20dp"
        android:gravity="start|center_vertical"
        android:text="广东 韶关"
        android:textColor="@color/textPrimaryColorBlack"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/StrangerProfileActivity_mTvSignature"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/StrangerProfileActivity_mTvNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="20dp"
        android:gravity="start|center_vertical"
        android:text="追梦青年℃"
        android:textColor="@color/textPrimaryColorBlack"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/StrangerProfileActivity_mTvLocation"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/sss"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/StrangerProfileActivity_mTvNickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>